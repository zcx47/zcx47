style="position:absolute">Nizam</button>
    
    <script>
        function Nizam(id){
            var Alam = document.getElementById('btn_Alam');
            var Rafi = document.getElementById('btn_Rafi');
            var Afandi = document.getElementById('btn_Afandi');
            var Baim = document.getElementById('btn_Baim');
            var Satrio = document.getElementById('btn_Satrio');
            var Renaldi = document.getElementById('btn_Renaldi');
            var i = Math.floor(Math.random()*300)+1;
            var j = Math.floor(Math.random()*100)+Nizam.offsetTop;
            id.style.left = i+'px';
            id.style.top = j+'px';
        }
    </script>
